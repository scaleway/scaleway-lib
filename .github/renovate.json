{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "assignees": ["team:console"],
  "assigneesSampleSize": 1,
  "automerge": false,
  "dependencyDashboard": true,
  "enabledManagers": ["github-actions", "npm"],
  "extends": ["config:recommended", ":combinePatchMinorReleases"],
  "ignorePaths": ["packages_deprecated/**/package.json"],
  "labels": ["dependencies"],
  "packageRules": [
    {
      "matchDepTypes": ["engines", "peerDependencies"],
      "rangeStrategy": "widen"
    },
    {
      "autoApprove": true,
      "automerge": true,
      "matchManagers": ["github-actions"],
      "semanticCommitScope": "devDeps"
    },
    {
      "matchDepTypes": ["packageManager", "devDependencies"],
      "matchUpdateTypes": ["major"],
      "semanticCommitScope": "devDeps"
    },
    {
      "matchDepTypes": ["packageManager", "devDependencies"],
      "matchUpdateTypes": ["minor", "patch"],
      "semanticCommitScope": "devDeps"
    },
    {
      "labels": ["UPDATE-MAJOR"],
      "matchUpdateTypes": ["major"],
      "minimumReleaseAge": "14 days"
    },
    {
      "autoApprove": true,
      "automerge": true,
      "labels": ["UPDATE-MINOR"],
      "matchUpdateTypes": ["minor"],
      "minimumReleaseAge": "7 days"
    },
    {
      "autoApprove": true,
      "automerge": true,
      "labels": ["UPDATE-PATCH"],
      "matchUpdateTypes": ["patch"],
      "minimumReleaseAge": "3 days"
    },
    {
      "matchDepTypes": ["engines"],
      "rangeStrategy": "widen"
    }
  ],
  "prConcurrentLimit": 10,
  "prHourlyLimit": 5,
  "rangeStrategy": "pin",
  "rebaseWhen": "auto",
  "reviewers": ["team:console"],
  "reviewersSampleSize": 2,
  "semanticCommitScope": "deps",
  "semanticCommitType": "chore"
}
