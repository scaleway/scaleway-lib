{
  "extends": "./packages/tsconfig/tsconfig.json",
  "compilerOptions": {
    "lib": ["DOM", "ES2019"],
    "module": "esnext",
    "target": "esnext",

    "noEmit": true,
    "allowJs": true,
    "jsx": "preserve",

    // Should be removed once we clear all errors
    "noUncheckedIndexedAccess": false
  },
  "include": ["**/*.ts", "**/*.js", "**/.*.js", "**/*.tsx"],
  "exclude": [
    "**/dist/*.ts",
    "**/__typetests__/*.test.ts",
    "**/__typetests__/*.test.tsx"
  ]
}
