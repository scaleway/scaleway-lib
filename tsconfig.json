{
  "compilerOptions": {
    "jsx": "preserve",
    "lib": ["DOM", "ES2022"],
    "module": "esnext",
    "noEmit": true,
    "skipLibCheck": true,
    "target": "esnext"
  },
  "exclude": [
    "**/dist",
    "**/dist/*.ts",
    "**/__typetests__/*.test.ts",
    "**/__typetests__/*.test.tsx",
    "packages_deprecated/**",
    "eslint.config.mjs"
  ],
  "extends": "@scaleway/tsconfig",
  "include": ["**/*.ts", "**/*.js", "**/.*.js", "**/*.tsx", "**/*.mjs"]
}
