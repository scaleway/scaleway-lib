{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "assist": {
    "actions": {
      "source": {
        "organizeImports": "on",
        "useSortedAttributes": "on",
        "useSortedKeys": "on",
        "useSortedProperties": "on"
      }
    },
    "includes": [
      "biome.json",
      "tsconfig.json",
      "tsconfig.build.json",
      "**/tsconfig.json",
      "**/tsconfig.build.json",
      "**/*.ts",
      "**/*.tsx",
      "!**/package.json",
      "!**/*.spec.ts",
      "!**/*.spec.tsx",
      "!**/*.test.ts",
      "!**/*.test.tsx",
      "!**/prebuild.ts",
      "!**/__mocks__/**",
      "!**/dist/**",
      "!**/build/**",
      "!**/.turbo/**"
    ]
  },
  "css": {
    "formatter": {
      "enabled": true,
      "quoteStyle": "single"
    },
    "linter": {
      "enabled": true
    },
    "parser": {
      "allowWrongLineComments": false,
      "cssModules": true
    }
  },
  "formatter": {
    "attributePosition": "auto",
    "enabled": true,
    "formatWithErrors": false,
    "includes": [
      "**/*.ts",
      "**/*.tsx",
      "biome.json",
      "tsconfig.json",
      "tsconfig.build.json",
      "**/tsconfig.json",
      "**/tsconfig.build.json",
      "!**/.next/*",
      "!**/coverage/*",
      "!**/node_modules/*",
      "!**/storybook-static/*",
      "!**/dist/*",
      "!**/pnpm-lock.yaml",
      "!**/package.json",
      "!**/CHANGELOG.md",
      "!**/*.snap",
      "!**/__snapshots__/*"
    ],
    "indentStyle": "space",
    "indentWidth": 2,
    "lineEnding": "lf",
    "lineWidth": 80
  },
  "javascript": {
    "formatter": {
      "arrowParentheses": "asNeeded",
      "attributePosition": "auto",
      "bracketSameLine": false,
      "bracketSpacing": true,
      "jsxQuoteStyle": "double",
      "quoteProperties": "asNeeded",
      "quoteStyle": "single",
      "semicolons": "asNeeded",
      "trailingCommas": "all"
    },
    "linter": {
      "enabled": true
    }
  },
  "json": {
    "formatter": {
      "enabled": true
    },
    "linter": {
      "enabled": true
    },
    "parser": {
      "allowComments": true
    }
  },
  "linter": {
    "enabled": true,
    "includes": [
      "**/*.ts",
      "**/*.tsx",
      "**/mocks/**",
      "!**/dist/**",
      "!**/build/**",
      "!**/.turbo/**",
      "!**/__mocks__/**",
      "!**/*.spec.ts",
      "!**/*.spec.tsx",
      "!**/*.test.ts",
      "!**/*.test.tsx"
    ],
    "rules": {
      "a11y": {
        "useAltText": "error",
        "useButtonType": "error"
      },
      "complexity": {
        "noBannedTypes": "error",
        "noCommaOperator": "error",
        "noExcessiveCognitiveComplexity": {
          "level": "off",
          "options": {
            "maxAllowedComplexity": 30
          }
        },
        "noExtraBooleanCast": "error",
        "noUselessCatch": "error",
        "noUselessConstructor": "error",
        "noUselessEmptyExport": "error",
        "noUselessRename": "error",
        "noUselessStringConcat": "error",
        "noUselessTernary": "error",
        "noUselessTypeConstraint": "error",
        "noUselessUndefinedInitialization": "error",
        "useArrowFunction": "off",
        "useFlatMap": "error",
        "useLiteralKeys": "warn",
        "useOptionalChain": "error",
        "useRegexLiterals": "error"
      },
      "correctness": {
        "noConstantCondition": "error",
        "noInvalidUseBeforeDeclaration": "error",
        "noUnreachable": "error",
        "noUnusedVariables": "warn",
        "noVoidTypeReturn": "error",
        "useHookAtTopLevel": "error",
        "useIsNan": "error"
      },
      "nursery": {
        "noDuplicateDependencies": "error",
        "noFloatingPromises": "error",
        "noMisusedPromises": "error"
      },
      "performance": {
        "noAccumulatingSpread": "off",
        "noBarrelFile": "off",
        "noDelete": "error"
      },
      "recommended": false,
      "security": {
        "noBlankTarget": "error",
        "noDangerouslySetInnerHtml": "error",
        "noGlobalEval": "error"
      },
      "style": {
        "noCommonJs": "error",
        "noParameterAssign": "error",
        "noRestrictedGlobals": "error",
        "useArrayLiterals": "error",
        "useConsistentObjectDefinitions": "error",
        "useConst": "error",
        "useExportType": "error",
        "useImportType": "error",
        "useNamingConvention": {
          "level": "error",
          "options": {
            "conventions": [
              {
                "match": ".*",
                "selector": {
                  "kind": "typeProperty",
                  "scope": "any"
                }
              },
              {
                "match": ".*",
                "selector": {
                  "kind": "objectLiteralProperty",
                  "scope": "any"
                }
              },
              {
                "formats": [
                  "CONSTANT_CASE",
                  "camelCase",
                  "PascalCase",
                  "snake_case"
                ],
                "selector": {
                  "kind": "any",
                  "scope": "any"
                }
              }
            ],
            "requireAscii": true,
            "strictCase": false
          }
        },
        "useObjectSpread": "error",
        "useShorthandFunctionType": "error",
        "useSingleVarDeclarator": "error",
        "useTemplate": "error",
        "useThrowOnlyError": "error"
      },
      "suspicious": {
        "noConsole": "off",
        "noDebugger": "error",
        "noDoubleEquals": "error",
        "noExtraNonNullAssertion": "error",
        "noIrregularWhitespace": "error",
        "noMisleadingCharacterClass": "error",
        "noOctalEscape": "error",
        "noShadowRestrictedNames": "info",
        "noVar": "error",
        "useAwait": "info",
        "useIterableCallbackReturn": "error"
      }
    }
  },
  "vcs": {
    "clientKind": "git",
    "defaultBranch": "main",
    "useIgnoreFile": false
  }
}
