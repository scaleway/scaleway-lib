{
  "name": "@scaleway/use-segment",
  "version": "1.0.1",
  "description": "A small hook to handle segment",
  "engines": {
    "node": ">=20.x"
  },
  "sideEffects": false,
  "type": "module",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "typecheck": "tsc --noEmit",
    "type:generate": "tsc --declaration -p tsconfig.build.json",
    "build": "vite build --config vite.config.ts && pnpm run type:generate",
    "build:profile": "npx vite-bundle-visualizer -c vite.config.ts",
    "lint": "eslint --report-unused-disable-directives --cache --cache-strategy content --ext ts,tsx ."
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/scaleway/scaleway-lib",
    "directory": "packages/use-segment"
  },
  "license": "MIT",
  "keywords": [
    "react",
    "reactjs",
    "hooks",
    "segment"
  ],
  "dependencies": {
    "@segment/analytics-next": "1.67.0",
    "use-deep-compare-effect": "1.8.1"
  },
  "devDependencies": {
    "react": "18.2.0"
  },
  "peerDependencies": {
    "react": "18.x || 18"
  }
}
